        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:parentActivityName=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Perfil_Profesor"
            android:label="@string/app_name"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".Pagar_Profesor"
            android:label="@string/app_name"
            android:parentActivityName=".Perfil_Profesor" />
        <activity
            android:name=".Ver_Profesor"
            android:label="@string/app_name"
            android:parentActivityName=".Listar_Profesores">
        </activity>
        <activity
            android:name=".Ver_Favorito"
            android:label="@string/app_name"
            android:parentActivityName=".Ver_favoritos">
        </activity>
        <activity
            android:name=".Busqueda_Profesores"
            android:label="@string/app_name"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".Listar_Profesores"
            android:label="@string/app_name"
            android:parentActivityName=".Busqueda_Profesores" />
        <activity
            android:name=".Modificar_Perfil_1"
            android:label="@string/app_name"
            android:parentActivityName=".Perfil_Profesor" />
        <activity
            android:name=".Modificar_Perfil_2"
            android:label="@string/app_name"
            android:parentActivityName=".Modificar_Perfil_1" />
        <activity
            android:name=".Registro1"
            android:label="@string/app_name"
            android:parentActivityName=".LoginActivity" >
            </activity>
        <activity
            android:name=".Registro2"
            android:label="@string/app_name"
            android:parentActivityName=".Registro1" />
        <activity
            android:name=".Registro3"
            android:label="@string/app_name"
            android:parentActivityName=".Registro2" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".Ver_favoritos"
            android:parentActivityName=".Busqueda_Profesores" >
        </activity>
    </application>

</manifest>